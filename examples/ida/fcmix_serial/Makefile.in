SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

F77      = @F77@
FFLAGS   = @FFLAGS@
FLIBS    = @FLIBS@
CC       = @CC@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@
F77_LNKR = @F77_LNKR@

OBJ_EXT = @OBJ_EXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..
SOLVER_SRCDIR = $(top_builddir)/src/ida
NVEC_SRCDIR   = $(top_builddir)/src/nvec_ser

LIBS = $(SOLVER_SRCDIR)/fcmix/libsundials_fida.la $(SOLVER_SRCDIR)/libsundials_ida.la $(NVEC_SRCDIR)/libsundials_fnvecserial.la $(NVEC_SRCDIR)/libsundials_nvecserial.la

fortran_update = @${SHELL} ${top_builddir}/examples/fortran_update.sh

EXEC_FILES = fidadenx

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs

all: $(EXEC_FILES)

fidadenx: $(srcdir)/fidadenx.f
	@${fortran_update} ${srcdir} fidadenx.f
	$(LIBTOOL) --mode=compile $(F77) $(FFLAGS) -c $(builddir)/fidadenx-updated.f
	@if test "X${F77_LNKR}" = "X${F77}"; then                                                                                                                                             \
	   echo "$(LIBTOOL) --mode=link ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   $(LIBTOOL) --mode=link ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                                                                                                 \
	   echo "$(LIBTOOL) --mode=link ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   $(LIBTOOL) --mode=link ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f fortran_update.sh
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)
	$(mkinstalldirs) $(EXS_INSTDIR)/ida/fcmix_serial
	$(INSTALL_PROG) $(top_builddir)/examples/ida/fcmix_serial/fidadenx        $(EXS_INSTDIR)/ida/fcmix_serial/
	$(INSTALL_FILE) $(top_srcdir)/examples/ida/fcmix_serial/fidadenx.out      $(EXS_INSTDIR)/ida/fcmix_serial/

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
