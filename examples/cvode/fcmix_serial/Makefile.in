	   ${LIBTOOL} --mode=link ${F77_LNKR} -o ${builddir}/fcvdenx_lap${EXE_EXT} ${builddir}/fcvdenx_lap-updated${OBJ_EXT} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ${BLAS_LAPACK_LIBS};        \
