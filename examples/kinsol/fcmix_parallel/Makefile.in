SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_PROG   = @INSTALL_PROGRAM@
INSTALL_FILE   = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

FFLAGS      = @FFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
FLIBS       = @FLIBS@
MPIF77      = @MPIF77@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@
MPIF77_LNKR = @MPIF77_LNKR@

OBJ_EXT = @OBJ_EXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..
SOLVER_SRCDIR   = $(top_builddir)/src/kinsol
NVEC_SRCDIR     = $(top_builddir)/src/nvec_par

SUNDIALS_LIBS = $(SOLVER_SRCDIR)/fcmix/libsundials_fkinsol.la $(SOLVER_SRCDIR)/libsundials_kinsol.la $(NVEC_SRCDIR)/libsundials_fnvecparallel.la $(NVEC_SRCDIR)/libsundials_nvecparallel.la

fortran_update = @${SHELL} ${top_builddir}/examples/fortran_update.sh

EXEC_FILES = fkinkryx_p

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs

all: $(EXEC_FILES)

fkinkryx_p: $(srcdir)/fkinkryx_p.f
	@${fortran_update} ${srcdir} fkinkryx_p.f
	$(LIBTOOL) --mode=compile $(MPIF77) $(MPI_FLAGS) -I$(MPI_INC_DIR) $(FFLAGS) -c $(builddir)/fkinkryx_p-updated.f
	@if test "X${MPIF77_LNKR}" = "X${MPIF77}"; then                                                                                                                                                                                        \
	   echo "$(LIBTOOL) --mode=link ${MPIF77_LNKR} -o ${builddir}/fkinkryx_p ${builddir}/fkinkryx_p-updated.${OBJ_EXT} ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   $(LIBTOOL) --mode=link ${MPIF77_LNKR} -o ${builddir}/fkinkryx_p ${builddir}/fkinkryx_p-updated.${OBJ_EXT} ${MPI_FLAGS} ${FFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                                                                                                                                                  \
	   echo "$(LIBTOOL) --mode=link ${MPIF77_LNKR} -o ${builddir}/fkinkryx_p ${builddir}/fkinkryx_p-updated.${OBJ_EXT} ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS}" ; \
	   $(LIBTOOL) --mode=link ${MPIF77_LNKR} -o ${builddir}/fkinkryx_p ${builddir}/fkinkryx_p-updated.${OBJ_EXT} ${MPI_FLAGS} ${CFLAGS} ${LDFLAGS} ${SUNDIALS_LIBS} -L${MPI_LIB_DIR} ${MPI_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f fortran_update.sh
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile

install: $(EXEC_FILES)
	$(mkinstalldirs) $(EXS_INSTDIR)/kinsol/fcmix_parallel
	$(INSTALL_PROG) $(top_builddir)/examples/kinsol/fcmix_parallel/fkinkryx_p         $(EXS_INSTDIR)/kinsol/fcmix_parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/fcmix_parallel/fkinkryx_p.out       $(EXS_INSTDIR)/kinsol/fcmix_parallel/

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                \
	${SHELL} ./config.status --recheck ; \
	cd ${abs_builddir}
