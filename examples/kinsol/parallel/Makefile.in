# Makefile for KINSOL parallel examples
#
# @configure_input@
# -----------------------------------------------------------------

SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL      = @INSTALL@
INSTALL_PROG = @INSTALL_PROGRAM@
INSTALL_FILE = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP         = @CPP@
CPPFLAGS    = @CPPFLAGS@
CC          = @CC@
CFLAGS      = @CFLAGS@
LDFLAGS     = @LDFLAGS@
LIBS        = @LIBS@
MPICC       = @MPICC@
MPI_INC_DIR = @MPI_INC_DIR@
MPI_LIB_DIR = @MPI_LIB_DIR@
MPI_LIBS    = @MPI_LIBS@
MPI_FLAGS   = @MPI_FLAGS@

OBJ_EXT = @OBJEXT@
EXE_EXT = @EXEEXT@

EXS_INSTDIR = @EXS_INSTDIR@

top_srcdir = $(srcdir)/../../..

SUNDIALS_INCS = -I$(top_srcdir)/include
SUNDIALS_LIBS = $(top_builddir)/src/kinsol/libsundials_kinsol.la         \
	        $(top_builddir)/src/nvec_par/libsundials_nvecparallel.la

EXEC_FILES = kinkryx_p$(EXE_EXT) \
	     kinkryx_bbd_p$(EXE_EXT)

mkinstalldirs = $(SHELL) $(top_srcdir)/config/mkinstalldirs
rminstalldirs = $(SHELL) $(top_srcdir)/config/rminstalldirs

# ----------------------------------------------------------------------------------------------------------------------

all: $(EXEC_FILES)

install:
	$(mkinstalldirs) $(EXS_INSTDIR)/kinsol/parallel
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/Makefile_ex       $(EXS_INSTDIR)/kinsol/parallel/Makefile
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/README            $(EXS_INSTDIR)/kinsol/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/kinkryx_p.c       $(EXS_INSTDIR)/kinsol/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/kinkryx_bbd_p.c   $(EXS_INSTDIR)/kinsol/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/kinkryx_p.out     $(EXS_INSTDIR)/kinsol/parallel/
	$(INSTALL_FILE) $(top_srcdir)/examples/kinsol/parallel/kinkryx_bbd_p.out $(EXS_INSTDIR)/kinsol/parallel/

uninstall:
	rm -f $(EXS_INSTDIR)/kinsol/parallel/Makefile
	rm -f $(EXS_INSTDIR)/kinsol/parallel/README
	rm -f $(EXS_INSTDIR)/kinsol/parallel/kinkryx_bbd_p.c
	rm -f $(EXS_INSTDIR)/kinsol/parallel/kinkryx_p.c
	rm -f $(EXS_INSTDIR)/kinsol/parallel/kinkryx_bbd_p.out
	rm -f $(EXS_INSTDIR)/kinsol/parallel/kinkryx_p.out
	$(rminstalldirs) $(EXS_INSTDIR)/kinsol/parallel
	$(rminstalldirs) $(EXS_INSTDIR)/kinsol

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f $(EXEC_FILES)

distclean: clean
	rm -f Makefile
	rm -f Makefile_ex

# ----------------------------------------------------------------------------------------------------------------------

kinkryx_p$(EXE_EXT): $(srcdir)/kinkryx_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/kinkryx_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/kinkryx_p$(EXE_EXT) $(builddir)/kinkryx_p$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)
kinkryx_bbd_p$(EXE_EXT): $(srcdir)/kinkryx_bbd_p.c
	$(LIBTOOL) --mode=compile $(MPICC) $(CPPFLAGS) $(MPI_FLAGS) $(SUNDIALS_INCS) -I$(MPI_INC_DIR) $(CFLAGS) -c $(srcdir)/kinkryx_bbd_p.c
	$(LIBTOOL) --mode=link $(MPICC) -o $(builddir)/kinkryx_bbd_p$(EXE_EXT) $(builddir)/kinkryx_bbd_p$(OBJ_EXT) $(MPI_FLAGS) $(CFLAGS) $(LDFLAGS) $(SUNDIALS_LIBS) -L$(MPI_LIB_DIR) $(MPI_LIBS) $(LIBS)

libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
