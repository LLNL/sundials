#define sgetrs_f77 SUNDIALS_LAPACK_FUNC(sgetrs, SGETRS)
#define sgeev_f77  SUNDIALS_LAPACK_FUNC(sgeev, SGEEV)

#else

#define dgbtrf_f77 dgbtrf_
