SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

@LIBTOOL_CMD@

F77      = @F77@
FFLAGS   = @FFLAGS@
FLIBS    = @FLIBS@
CC       = @CC@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@
F77_LNKR = @F77_LNKR@

OBJ_EXT = @OBJ_EXT@

COMPILER_PREFIX = @COMPILER_PREFIX@
LINKER_PREFIX   = @LINKER_PREFIX@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fida -lsundials_ida -lsundials_fnvecserial -lsundials_nvecserial

EXEC_FILES = fidadenx

all: $(EXEC_FILES)

fortran_update.sh:
	@${INSTALL} ${top_builddir}/config/fortran_update.sh ${builddir}

fidadenx: $(srcdir)/fidadenx.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} fidadenx.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/fidadenx-updated.f
	@if test "X${F77_LNKR}" = "X${F77}"; then                                                                                                                                             \
	   echo "${LINKER_PREFIX} ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${FFLAGS} ${LDFLAGS} -L${SUNDIALS_LIB_DIR} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${LINKER_PREFIX} ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${FFLAGS} ${LDFLAGS} -L${SUNDIALS_LIB_DIR} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 else                                                                                                                                                                                 \
	   echo "${LINKER_PREFIX} ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${CFLAGS} ${LDFLAGS} -L${SUNDIALS_LIB_DIR} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS}" ; \
	   ${LINKER_PREFIX} ${F77_LNKR} -o ${builddir}/fidadenx ${builddir}/fidadenx-updated.${OBJ_EXT} ${CFLAGS} ${LDFLAGS} -L${SUNDIALS_LIB_DIR} ${SUNDIALS_LIBS} ${LIBS} ${FLIBS} ;        \
	 fi

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f fortran_update.sh

uninstall: clean
	rm -f $(EXEC_FILES)
