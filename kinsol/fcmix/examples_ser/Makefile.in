SHELL = @SHELL@

srcdir       = @srcdir@
top_builddir = @top_builddir@
builddir     = @builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL = @INSTALL@

@LIBTOOL_CMD@

F77     = @F77@
FFLAGS  = @FFLAGS@
FLIBS   = @FLIBS@
CC      = @CC@
LDFLAGS = @LDFLAGS@
LIBS    = @LIBS@

COMPILER_PREFIX = @COMPILER_PREFIX@
LINKER_PREFIX   = @LINKER_PREFIX@

SUNDIALS_LIB_DIR = $(libdir)
SUNDIALS_LIBS    = -lsundials_fkinsol -lsundials_kinsol -lsundials_fnvecserial -lsundials_nvecserial -lsundials_shared

EXEC_FILES = kindiagsf

all: $(EXEC_FILES)

fortran_update.sh:
	@${INSTALL} ${top_builddir}/config/fortran_update.sh ${builddir}

kindiagsf: $(srcdir)/kindiagsf.f fortran_update.sh
	@${SHELL} ${builddir}/fortran_update.sh ${srcdir} kindiagsf.f
	$(COMPILER_PREFIX) $(F77) $(FFLAGS) -c $(builddir)/kindiagsf-updated.f
	$(LINKER_PREFIX) $(CC) -o $(builddir)/kindiagsf $(builddir)/kindiagsf-updated.o $(LDFLAGS) -L$(SUNDIALS_LIB_DIR) $(SUNDIALS_LIBS) $(LIBS) $(FLIBS)

clean:
	rm -rf .libs
	rm -f *.lo
	rm -f *.o
	rm -f *-updated.f
	rm -f fortran_update.sh

uninstall: clean
	rm -f $(EXEC_FILES)
