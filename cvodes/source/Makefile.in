SHELL = @SHELL@

@SET_MAKE@

srcdir       = @srcdir@
builddir     = @builddir@
abs_builddir = @abs_builddir@
top_builddir = @top_builddir@
prefix       = @prefix@
exec_prefix  = @exec_prefix@
includedir   = @includedir@
libdir       = @libdir@

INSTALL        = @INSTALL@
INSTALL_LIB    = @INSTALL_PROGRAM@
INSTALL_HEADER = @INSTALL_DATA@

LIBTOOL      = @LIBTOOL@
LIBTOOL_DEPS = @LIBTOOL_DEPS@

CPP      = @CPP@
CPPFLAGS = @CPPFLAGS@
CC       = @CC@
CFLAGS   = @CFLAGS@
LDFLAGS  = @LDFLAGS@
LIBS     = @LIBS@

LIB_REVISION = @LIB_REVISION@

SHARED_BUILD_DIR = $(top_builddir)/shared/source

CONFIG_INC_DIR = $(top_builddir)/config
SHARED_INC_DIR = $(srcdir)/../../shared/include
CVODES_INC_DIR = $(srcdir)/../include

CVODES_LIB       = libsundials_cvodes.la
CVODES_LIB_FILES = cvodes.lo cvodes_io.lo cvodea.lo cvodea_io.lo cvodes_band.lo cvodes_dense.lo cvodes_diag.lo cvodes_spils.lo cvodes_spbcgs.lo cvodes_spgmr.lo cvodes_sptfqmr.lo cvodes_bandpre.lo cvodes_bbdpre.lo
CVODES_OBJ_FILES = cvodes.o cvodes_io.o cvodea.o cvodea_io.o cvodes_band.o cvodes_dense.o cvodes_diag.o cvodes_spils.o cvodes_spbcgs.o cvodes_spgmr.o cvodes_sptfqmr.o cvodes_bandpre.o cvodes_bbdpre.o

SHARED_LIB_FILES = $(SHARED_BUILD_DIR)/sundials_band.lo \
                   $(SHARED_BUILD_DIR)/sundials_dense.lo \
                   $(SHARED_BUILD_DIR)/sundials_iterative.lo \
                   $(SHARED_BUILD_DIR)/sundials_math.lo \
                   $(SHARED_BUILD_DIR)/sundials_nvector.lo \
                   $(SHARED_BUILD_DIR)/sundials_smalldense.lo \
                   $(SHARED_BUILD_DIR)/sundials_spgmr.lo \
                   $(SHARED_BUILD_DIR)/sundials_spbcgs.lo \
                   $(SHARED_BUILD_DIR)/sundials_sptfqmr.lo

all: $(CVODES_LIB_FILES)

install: shared $(CVODES_LIB_FILES)
	$(LIBTOOL) --mode=link $(CC) $(CFLAGS) -o $(CVODES_LIB) $(CVODES_LIB_FILES) $(SHARED_LIB_FILES) -rpath $(libdir) $(LDFLAGS) $(LIBS) -version-info $(LIB_REVISION)
	$(LIBTOOL) --mode=install $(INSTALL_LIB) $(CVODES_LIB) $(libdir)
	$(INSTALL) -d $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes.h $(includedir)
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodea.h $(includedir)
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_dense.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_band.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_diag.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_spils.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_spbcgs.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_spgmr.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_sptfqmr.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_bandpre.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(CVODES_INC_DIR)/cvodes_bbdpre.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(srcdir)/cvodes_impl.h $(includedir)/cvodes
	$(INSTALL_HEADER) $(srcdir)/cvodea_impl.h $(includedir)/cvodes

shared:
	@cd ${SHARED_BUILD_DIR} ; \
	 ${MAKE} ;                \
	 cd ${abs_builddir}

clean:
	$(LIBTOOL) --mode=clean rm -f $(CVODES_LIB)
	rm -f $(CVODES_LIB_FILES)
	rm -f $(CVODES_OBJ_FILES)

uninstall: clean
	$(LIBTOOL) --mode=uninstall rm -f $(libdir)/$(CVODES_LIB)
	rm -f $(includedir)/cvodes.h
	rm -f $(includedir)/cvodea.h
	rm -f $(includedir)/cvodes/cvodes_dense.h
	rm -f $(includedir)/cvodes/cvodes_band.h
	rm -f $(includedir)/cvodes/cvodes_diag.h
	rm -f $(includedir)/cvodes/cvodes_spils.h
	rm -f $(includedir)/cvodes/cvodes_spbcgs.h
	rm -f $(includedir)/cvodes/cvodes_spgmr.h
	rm -f $(includedir)/cvodes/cvodes_sptfqmr.h
	rm -f $(includedir)/cvodes/cvodes_bandpre.h
	rm -f $(includedir)/cvodes/cvodes_bbdpre.h
	rm -f $(includedir)/cvodes/cvodes_impl.h
	rm -f $(includedir)/cvodes/cvodea_impl.h
	@if test -d ${includedir}/cvodes ; then \
	   rmdir ${includedir}/cvodes ;         \
	fi

cvodes.lo: $(srcdir)/cvodes.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes.c
cvodes_io.lo: $(srcdir)/cvodes_io.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_io.c
cvodea.lo: $(srcdir)/cvodea.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodea.c
cvodea_io.lo: $(srcdir)/cvodea_io.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodea_io.c
cvodes_dense.lo: $(srcdir)/cvodes_dense.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_dense.c
cvodes_band.lo: $(srcdir)/cvodes_band.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_band.c
cvodes_diag.lo: $(srcdir)/cvodes_diag.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_diag.c
cvodes_spils.lo: $(srcdir)/cvodes_spils.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_spils.c
cvodes_spbcgs.lo: $(srcdir)/cvodes_spils.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_spbcgs.c
cvodes_spgmr.lo: $(srcdir)/cvodes_spgmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_spgmr.c
cvodes_sptfqmr.lo: $(srcdir)/cvodes_sptfqmr.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_sptfqmr.c
cvodes_bandpre.lo: $(srcdir)/cvodes_bandpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_bandpre.c
cvodes_bbdpre.lo: $(srcdir)/cvodes_bbdpre.c
	$(LIBTOOL) --mode=compile $(CC) $(CPPFLAGS) -I$(CONFIG_INC_DIR) -I$(SHARED_INC_DIR) -I$(CVODES_INC_DIR) $(CFLAGS) -c $(srcdir)/cvodes_bbdpre.c


libtool: $(top_builddir)/$(LIBTOOL_DEPS)
	@cd ${top_builddir} ;                 \
	 ${SHELL} ./config.status --recheck ; \
	 cd ${abs_builddir}
